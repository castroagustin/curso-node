extends layouts/layout 

block formulario
    h1(class="mb-3 mt-5")='Ingrese los datos'
    form(method="POST" action="/productos")

        div(class="mb-3")
            label(for="title" class="form-label")='Titulo'
            input(type="text" class="form-control" name="title")

        div(class="mb-3")
            label(for="price" class="form-label")='Precio'
            input(type="number" class="form-control" name="price")
        
        div(class="mb-3")
            label(for="thumbnail" class="form-label")='Link a imagen'
            input(type="text" class="form-control" name="thumbnail")
        
        button(type="submit" class="btn btn-primary mt-3")='Enviar'
        a(href='/productos' class="btn btn-secondary mt-3 mx-3")='Ir a productos'